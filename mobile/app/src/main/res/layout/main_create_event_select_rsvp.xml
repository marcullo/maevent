<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_event_select_rsvp"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="40dp"
    card_view:cardCornerRadius="@dimen/main_event_details_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/touch_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cb_create_event_check_rsvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/main_create_event_rsvp"
            android:buttonTint="@color/colorCreateEventItemSelected"
            android:textColor="@color/colorCreateEventItemSelected"
            android:textSize="@dimen/main_create_event_card_view_text_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
