<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/iv_invitations_icon"
        style="@style/ConfigureProfileItemTheme"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/main_agenda_margin_size"
        android:src="@drawable/ic_whatshot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_invitations_label"
        style="@style/ConfigureProfileItemLabelTheme"
        android:text="@string/main_invitations_label"
        android:layout_marginStart="@dimen/main_agenda_margin_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_invitations_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_invitations_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_invitations_icon" />

    <ProgressBar
        android:id="@+id/pb_invitations_number_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/iv_invitations_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_invitations_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_invitations_number"
        style="@style/ConfigureProfileItemLabelTheme"
        android:visibility="invisible"
        android:layout_marginStart="@dimen/main_agenda_margin_size"
        android:layout_marginEnd="@dimen/main_agenda_margin_size"
        app:layout_constraintTop_toTopOf="@+id/iv_invitations_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_invitations_icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="25" />

</android.support.constraint.ConstraintLayout>