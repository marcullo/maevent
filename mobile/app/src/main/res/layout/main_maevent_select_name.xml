<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_create_event_select_name"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="40dp"
    card_view:cardCornerRadius="@dimen/main_event_details_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/touch_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="@dimen/main_create_event_card_view_text_size"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center_horizontal"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:hint="@string/main_create_event_select_name" />

        <ImageView
            android:id="@+id/iv_create_event_name_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_done"
            android:backgroundTint="@color/colorCreatingEventOk"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_create_event_name_selected_label"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_create_event_name_selected_label"
            card_view:layout_constraintTop_toTopOf="@+id/tv_create_event_name_selected_label" />

        <TextView
            android:id="@+id/tv_create_event_name_selected_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/main_create_event_select_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorSecondaryText"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
